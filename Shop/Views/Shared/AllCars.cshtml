@model Car

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.carImg" alt="@Model.carName" />
    <h2>Модель: @Model.carName</h2>
    <p>@Model.carShortDesc</p>
    <p>Цена: @Model.carPrice.ToString("c")</p>
    <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@Model.carId">Добавить в корзину</a></p>
</div>